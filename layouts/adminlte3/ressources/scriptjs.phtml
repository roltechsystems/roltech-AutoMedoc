    function optionJsonDecode(JsonVar,emptyValue='Selectionnez...'){
        var object = JSON.parse(JsonVar);
        var populated_options =  "<option value=''>"+emptyValue+"</option>";
        $.each(object, function(k,v) {
         populated_options += "<option value='"+k+"'>"+v+"</option>";
        });
